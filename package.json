{
  "name": "typescript-strict-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "pnpm transform:test && node ./build/test.js",
    "build": "pnpm lint && pnpm transform",
    "lint": "tsc -p tsconfig.build.json && biome lint ./src --apply",
    "format": "biome format ./src --write",
    "dev": "pnpm transform && pnpm dev:watch",
    "dev:watch": "chokidar \"./src/**/*\" -c \"pnpm transform\"",
    "check": "tsc -p tsconfig.build.json && biome check ./src --apply",
    "transform": "rimraf dist && tsc && swc src -d ./dist",
    "transform:test": "rimraf build && tsc && swc src -d ./build --config-file test.swcrc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@types/node": "^20.10.5",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": "./dist/index.js"
  }
}
