{
  "name": "typescript-strict-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "pnpm transform:test && node --test ./build",
    "build": "pnpm lint && swc src -d ./dist",
    "lint": "tsc -p tsconfig.build.json && eslint ./src",
    "format": "prettier --write src",
    "dev": "pnpm transform && pnpm dev:watch",
    "dev:watch": "chokidar \"./src/**/*\" -c \"pnpm transform\"",
    "transform": "rimraf dist && swc src -d ./dist",
    "transform:test": "rimraf build && swc src -d ./build --config-file test.swcrc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": "./dist/index.js"
  }
}
