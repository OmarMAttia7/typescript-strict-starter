{
  "name": "typescript-strict-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "pnpm transform:test && node --test ./build",
    "build": "pnpm lint && swc src -d ./dist",
    "lint": "tsc -p tsconfig.build.json && eslint ./src",
    "dev": "pnpm transform && pnpm dev:watch",
    "dev:watch": "chokidar \"./src/**/*\" -c \"pnpm transform\"",
    "transform": "swc src -d ./dist",
    "transform:test": "swc src -d ./build --config-file test.swcrc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.73",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.46.0",
    "typescript": "^5.1.6"
  },
  "exports": {
    ".": "./dist/index.js"
  }
}
