{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "recommended": true
      }
    },
    "ignore": ["dist", "build", "node_modules"]
  },
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
